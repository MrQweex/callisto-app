<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="callisto" parent="@style/Theme.AppCompat">
        <item name="android:windowActionBar">true</item>
        <item name="android:homeAsUpIndicator">@drawable/actionbar_drawer</item>
        <item name="android:actionBarStyle">@style/MyActionBar</item>
    </style>

    <style name="MyActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@color/logo_color1</item>
    </style>

    <style name="nav_entry">
        <item name="@android:padding">5sp</item>
        <item name="@android:textSize">24sp</item>
    </style>

    <style name="titlebar_txt">
        <item name="@android:textColor">@android:color/white</item>
        <item name="@android:textSize">20sp</item>
        <item name="@android:textAllCaps">false</item>
    </style>

    <style name="catalog_row_main">
        <item name="@android:textColor">#333333</item>
    </style>

    <style name="catalog_row_sub">
        <item name="@android:textColor">#666666</item>
    </style>
</resources>