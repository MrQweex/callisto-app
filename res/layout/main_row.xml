<!-- This is a row for AllShows -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/row"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:cacheColorHint="@android:color/transparent"
    android:orientation="horizontal"
    android:padding="0dp" >

    <ImageView
        android:id="@+id/img"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="center_vertical|center_horizontal"
        android:layout_marginLeft="10dp"
        android:background="@drawable/panel_picture_frame_bg_normal" />

    <LinearLayout
        android:id="@+id/fafeafea"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        android:layout_weight="1">

        <TextView
            android:id="@+id/rowTextView"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Show"
            android:textColor="@color/txtClr"
            android:textSize="25sp" >
        </TextView>

        <TextView
            android:id="@+id/rowSubTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/txtClr" />

    </LinearLayout>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="100"
            android:id="@+id/showUnwatched" android:layout_gravity="center" android:textSize="25dp"
            android:textStyle="bold" android:paddingRight="10dp" android:textColor="@color/txtClr"/>

</LinearLayout>